{### POST CARD ###}
{##################}
<div class="post-card">
  {# 文章简介和信息 #}
  <div class="post-card-content" style="{% if post.cover_img %}padding-right: 0;{% else %}width: 100%{% endif %}">
    
    <h2 class="post-card-title">
      <a href="{{ url_for(post.path) }}">{{ post.title or __('post.untitled') }}</a>
    </h2>

    {% if post.description %}
      <p class="post-card-excerpt">{{ post.description }}</p>
    {% elif post.excerpt %}
      <p class="post-card-excerpt">{{ post.excerpt }}</p>
    {% endif %}

    <div class="post-meta-container">
      {{ partial('_partials/post/post-meta-short.njk') }}
    </div>

  </div>

  {# 如果文章有封面图，显示在右侧 #}
  {% if post.cover_img %}
    <div class="post-card-image">
      <img src="{{ url_for(post.cover_img) }}" alt="{{ post.title }}">
    </div>
  {% endif %}
</div>
{######################}
{### END POST CARD ###}
{######################}
