{##################}
{### POST CARD ###}
{##################}
<div class="post-card">
  {# 文章简介和信息 #}
  <div class="post-card-content">
    <h2 class="post-card-title">
      <a href="{{ url_for(post.path) }}">{{ post.title or __('post.untitled') }}</a>
    </h2>

    {% if post.description %}
      <p class="post-card-excerpt">{{ post.description }}</p>
    {% elif post.excerpt %}
      <p class="post-card-excerpt">{{ post.excerpt }}</p>
    {% endif %}

    <div class="post-card-meta">
      <time datetime="{{ moment(post.date).format() }}">{{ date(post.date, 'YYYY-MM-DD') }}</time>
    </div>

    {% if theme.read_more_btn %}
      <a class="post-card-btn" href="{{ url_for(post.path) }}">{{ __('post.read_more') }} &raquo;</a>
    {% endif %}
  </div>

  {# 如果文章有封面图，显示在右侧 #}
  {% if post.cover_img %}
    <div class="post-card-image">
      <img src="{{ url_for(post.cover_img) }}" alt="{{ post.title }}">
    </div>
  {% endif %}
</div>
{######################}
{### END POST CARD ###}
{######################}
