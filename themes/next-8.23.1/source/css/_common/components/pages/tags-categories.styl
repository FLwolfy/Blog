/* ==============================
   整体标题
   ============================== */
.enhanced-title {
  font-size: 1.5rem;                    // 文字大小
  font-weight: bold;                     // 粗体
  padding: 0.2rem 1rem 0 1rem;          // 内边距：上右下左
  border-bottom: 0.125rem solid var(--brand-color); // 底部边框
  display: flex;
  align-items: center;                   // 垂直居中
  justify-content: center;               // 水平居中
  gap: 0.5rem;                           // 图标与文字间距
  color: var(--brand-color);
  background-color: $color-tagcloud-container-custom;

  backdrop-filter: blur(0.375rem);
  -webkit-backdrop-filter: blur(0.375rem);

  i {
    font-size: 1.125rem;                 // 图标大小
    color: inherit;                       // 继承文字颜色
  }
}

/* ==============================
   分类标签容器
   ============================== */
.cats-tags-container {
  position: relative;
  text-align: center;
  padding: 1rem;
  margin-bottom: 2rem;
  background: $color-tagcloud-container-custom;

  a {
    font-weight: bold;
    display: inline-block;
    margin: 0.625rem;
  }

  /* 上下 + 左右渐变遮罩 */
  -webkit-mask-image:
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%, 100% 100%;
  -webkit-mask-composite: destination-in;

  mask-image:
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  mask-repeat: no-repeat;
  mask-size: 100% 100%, 100% 100%;
  mask-composite: intersect;

  &::before {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    border: 1rem solid transparent;
    border-radius: 1rem;
    pointer-events: none;
    box-sizing: border-box;
    border-image: linear-gradient(to bottom, rgba(255,255,255,0.2), rgba(255,255,255,0.25)) 1;
  }
}

/* ==============================
   分类卡片容器
   ============================== */
.category-collage-categories {
  display: flex;
  gap: 0.625rem;
  overflow-x: auto;
  padding: 0.75rem 1.25rem;
  margin: 0 auto;
  scrollbar-width: thin;
  scrollbar-color: #bbb transparent;

  &::-webkit-scrollbar {
    height: 0.375rem;
  }
  &::-webkit-scrollbar-track {
    background: transparent;
  }
  &::-webkit-scrollbar-thumb {
    background-color: #bbb;
    border-radius: 0.1875rem;
  }

  > *:first-child {
    margin-left: 0; // 首元素无多余间距
  }
}

/* ==============================
   单个分类卡片
   ============================== */
.category-collage-card {
  background: transparent;
  position: relative;
  flex: 0 0 auto;
  width: 13rem;
  height: 9rem;
  border-radius: 0.5rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
  transition: box-shadow 0.3s ease, transform 0.3s ease;

  /* ==============================
     灰色蒙版层
     ============================== */
  &::after {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0, 0, 0, 0.25);  // 默认半透明灰色
    pointer-events: none;             // 不阻挡交互
    transition: opacity 0.3s ease;    // hover 时淡出
    z-index: 1;
  }

  &:hover::after {
    opacity: 0;
  }

  /* ==============================
     卡片图片
     ============================== */
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 0.5rem 0.5rem 0 0;
    display: block;
    flex-shrink: 0;
    transition: transform 1.5s ease;
  }

  &:hover img {
    transform: scale(1.1);
  }
}

/* 分类名称，置于蒙版之上 */
.category-name {
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  bottom: 0.5rem;
  left: 0.5rem;
  padding: 0.25rem 0.5rem;
  font-weight: 900;
  font-size: 1.25rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-radius: 0.25rem;
  max-width: 90%;
  pointer-events: none;
  z-index: 2; // 高于蒙版
}

/* ==============================
   标签云渐变颜色
   ============================== */
for $tag-cloud in (0 .. 10)
  $tag-cloud-color = mix($tag-cloud-end, $tag-cloud-start, $tag-cloud * 10)
  .tag-cloud-{$tag-cloud}
    border-bottom-color: $tag-cloud-color
    color: $tag-cloud-color

if hexo-config('darkmode')
  @media (prefers-color-scheme: dark)
    for $tag-cloud in (0 .. 10)
      $tag-cloud-color = mix($tag-cloud-end-dark, $tag-cloud-start-dark, $tag-cloud * 10)
      .tag-cloud-{$tag-cloud}
        border-bottom-color: $tag-cloud-color
        color: $tag-cloud-color
