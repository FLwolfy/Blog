/* ==============================
   整体标题部分
   ============================== */
.enhanced-title {
  font-size: 2rem;                    // 文字大小
  font-weight: bold;                   // 粗体
  padding: 1rem 1rem 0rem 1rem;     // 上右下左内边距
  border-bottom: 0.125rem solid var(--brand-color); // 底部边框
  display: flex;                       
  align-items: center;                 // 垂直居中
  justify-content: center;             // 水平居中
  gap: 0.5rem;                         // 图标与文字间距
  color: var(--brand-color);
  border-radius: 0.375rem;
  background-color: $color-tagcloud-container-custom;

  backdrop-filter: blur(0.375rem);
  -webkit-backdrop-filter: blur(0.375rem);
}

.enhanced-title i {
  font-size: 1.125rem;                 // 图标大小
  color: inherit;                       // 继承文字颜色
}

/* ==============================
   分类标签容器
   ============================== */
.cats-tags-container {
  text-align: center;
  position: relative;
  padding: 1rem;
  margin-bottom: 2rem;

  a {
    font-weight: bold;
    display: inline-block;
    margin: 0.625rem;                  // 10px → 0.625rem
  }

  background: $color-tagcloud-container-custom;
  border-radius: 0.75rem;              // 12px → 0.75rem

  /* 上下 + 左右渐变遮罩（缩小到 5%） */
  -webkit-mask-image: 
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%, 100% 100%;
  -webkit-mask-composite: destination-in;

  mask-image: 
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  mask-repeat: no-repeat;
  mask-size: 100% 100%, 100% 100%;
  mask-composite: intersect;
}

.cats-tags-container::before {
  content: "";
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  border: 1rem solid transparent;      /* 先设透明边框 */
  border-radius: 1rem;
  pointer-events: none;
  box-sizing: border-box;

  /* 四边颜色不同 */
  border-image: linear-gradient(to bottom, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.25) 100%) 1;
}


/* ==============================
   分类卡片容器
   ============================== */
.category-collage-categories {
  display: flex;
  gap: 1rem;
  overflow-x: auto;
  padding: 0.75rem 0.625rem;
  margin: 0 auto 1.2rem auto;
  scrollbar-width: thin;
  scrollbar-color: #bbb transparent;
  justify-content: center;

  &::-webkit-scrollbar {
    height: 0.375rem;
  }
  &::-webkit-scrollbar-track {
    background: transparent;
  }
  &::-webkit-scrollbar-thumb {
    background-color: #bbb;
    border-radius: 0.1875rem;
  }
}

/* ==============================
   卡片本体
   ============================== */
.category-collage-card {
  background: transparent;
  position: relative;
  flex: 0 0 auto;
  width: 15rem;
  margin: 0;
  border-radius: 0.5rem;               // 8px → 0.5rem
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  transition: box-shadow 0.3s ease, transform 0.3s ease;
  overflow: hidden;
  box-shadow: none;
  border: none;
}

.category-collage-card img {
  background: transparent;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  border-radius: 0.5rem 0.5rem 0 0;
  display: block;
  flex-shrink: 0;
  transition: transform 1.5s ease;
}

.category-collage-card:hover img {
  transform: scale(1.1);
}

.category-name {
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  bottom: 0.5rem;                     // 8px → 0.5rem
  left: 0.5rem;
  margin: 0;
  padding: 0.25rem 0.5rem;             // 4px 8px
  font-weight: 900;
  font-size: 1.25rem;                  // 20px → 1.25rem
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-radius: 0.25rem;              // 4px
  max-width: 90%;
  pointer-events: none;
  z-index: 2;
}

/* ==============================
   标签云颜色
   ============================== */
for $tag-cloud in (0 .. 10)
  $tag-cloud-color = mix($tag-cloud-end, $tag-cloud-start, $tag-cloud * 10)
  .tag-cloud-{$tag-cloud}
    border-bottom-color: $tag-cloud-color
    color: $tag-cloud-color

if hexo-config('darkmode')
  @media (prefers-color-scheme: dark)
    for $tag-cloud in (0 .. 10)
      $tag-cloud-color = mix($tag-cloud-end-dark, $tag-cloud-start-dark, $tag-cloud * 10)
      .tag-cloud-{$tag-cloud}
        border-bottom-color: $tag-cloud-color
        color: $tag-cloud-color
