/* 卡片主体 */
.post-card {
  display: block;
  background-color: $article-card-bg;
  margin-bottom: 20px;
  overflow: hidden;
  transition: transform 0.3s, box-shadow 0.3s;
  height: 9rem;
  white-space: nowrap;         /* 防止 inline-block 换行 */
}

.post-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 0.5rem 1.25rem rgba(0,0,0,0.12),
            0 0 1.5rem 0.625rem $color-img-box-shadow-hover-custom;
}

/* 卡片封面图 */
.post-card-image {
  display: inline-block;
  width: 30%;
  height: 100%;
  vertical-align: top;
  position: relative;
  overflow: hidden;

  clip-path: polygon(
    0 0, 20px 6.6%, 10px 13.3%, 25px 20%, 10px 26.6%, 30px 33.3%, 20px 46.6%, 
    35px 50%, 15px 60%, 25px 70%, 10px 80%, 20px 90%, 
    0 100%, 100% 100%, 100% 0
  );


  /* 左侧渐变遮罩 */
  -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: cover;

  mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 100%);
  mask-repeat: no-repeat;
  mask-size: cover;
}

.post-card-image a {
  display: block;
  width: 100%;
  height: 100%;
}

.post-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
  transition: transform 0.8s ease;
}

.post-card-image::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: $article-card-img-mask;
  pointer-events: none;
  transition: background 0.3s ease;
}

.post-card:hover .post-card-image img {
  transform: scale(1.1);
}

.post-card:hover .post-card-image::after {
  background: rgba(255, 255, 255, 0);
}

/* 卡片内容 */
.post-card-content {
  display: inline-block;
  width: 70%;
  height: 100%;
  padding: 1rem;
  vertical-align: top;
  box-sizing: border-box;
  overflow: hidden;
}

/* 保留标题的行高/高度 */
.post-card-title {
  font-size: 1.25rem;
  line-height: 1.75rem;
  height: 1.75rem;
  margin: 0 !important;

  text-decoration: underline;
  text-decoration-thickness: 2px;
  text-underline-offset: 4px;
}

/* 关键：把 a 变成块级并限制宽度，同时在同一元素上设置省略号 */
.post-card-title a {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 卡片简介 */
.post-card-excerpt {
  font-size: 0.95rem;
  margin: 0.25rem 0.5rem 0.25rem 0.5rem;
  height: 4rem;

  display: -webkit-box;
  word-break: break-word;         /* 强制长单词换行 */
  white-space: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 卡片 Meta */
.post-card-content .post-meta-container .post-meta {
  display: block;
  font-size: 0.8rem;
  margin: 0;
  margin-top: auto;
  
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-card-content .post-meta-container .post-meta span {
  display: inline;
}

.post-card-content .post-meta-container a {
  color: $link-color;
  opacity: 0.4;
  transition: color 0.3s ease;
}

.post-card-content .post-meta-container a:hover {
  opacity: 1;
  color: $link-hover-color;
}
