/* 右侧详情区域 */
.track-detail {
  position: absolute;
  top: 0;
  right: 2%;
  width: 38%;
  height: 100%;       /* 整体撑满容器 */
  overflow: hidden;
  display: block;
  gap: 0;

  /* 左右渐变遮罩，左边 5%，右边 5% */
  -webkit-mask-image: 
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%;
  -webkit-mask-composite: destination-in;

  mask-image: 
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  mask-repeat: no-repeat;
  mask-size: 100% 100%;
  mask-composite: intersect;

  /* 动画 */
  opacity: 1;
  transform: translateX(0);
  transition: opacity 0.3s ease, transform 0.3s ease;
}


.track-detail.fade-out {
  opacity: 0;
  transform: translateX(20px); /* 向右淡出 */
}

.track-detail.fade-in {
  opacity: 1;
  transform: translateX(0); /* 从右淡入 */
}

/* 封面图，占 30% 高度 */
.track-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 30%;        /* 3:7 */
  overflow: hidden;
}

.track-cover a,
.track-cover img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;

  pointer-events: none; /* 禁止点击 */
}

/* 内容卡片，占 70% 高度 */
.track-card {
  position: absolute;
  top: 30%;           /* 紧贴封面下方 */
  left: 0;
  width: 100%;
  height: 70%;        /* 3:7 */
  padding: 1.2rem 2rem 2rem 2rem;
  background: $article-track-info-bg;
  box-sizing: border-box;
  display: block;
}

/* 标题 */
.track-card .track-title {
  height: 10%;
  font-size: 1.2rem;
  font-weight: bold;
  text-decoration: none;
  overflow: hidden;          /* 超出部分隐藏 */
  text-overflow: ellipsis;   /* 超出文字显示省略号 */
  white-space: nowrap;       /* 不换行 */
}

/* meta 信息 */
.track-meta {
  width: 100%;
  height: 15%;
  max-height: 15%;
  margin: 1.5% 0;
  font-size: 0.8rem;
  line-height: 1.0rem;
  color: #888;
  align-items: center;
  justify-content: center;
  display: -webkit-box;
  word-break: break-word;         /* 强制长单词换行 */
  white-space: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 简介 */
.track-card .track-description {
  font-size: 1.0rem;
  line-height: 1.5rem;
  margin-top: 0;
  max-height: 55%;
  overflow: hidden;
}

.track-readmore {
  display: flex;                /* 改成 flex 布局 */
  align-items: center;          /* 垂直居中 */
  justify-content: center;      /* 水平居中 */
  padding: 0.5rem 1%;         
  font-size: 1.5rem;
  font-weight: 500;
  background-color: $btn-default-bg;
  border: none;                 
  border-radius: 4px;           
  text-decoration: none;        
  cursor: pointer;
  transition: background-color 0.2s, transform 0.2s;
  width: 98%;
  height: 10%;
  text-align: center;           /* 备用，确保文字水平居中 */
}


.track-readmore:hover {
  background-color: $btn-default-hover-bg;      /* hover 背景色 */
  transform: translateY(-1px);    /* 小幅上移 */
}

@media (max-width: 768px) {
  /* 轮盘主体 */
  .track-detail {
    width: 98%;
    height: 28rem;
    top: 20rem;
    right: 1%;

    -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    -webkit-mask-composite: destination-in;

    mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
    mask-composite: intersect;
  }
}