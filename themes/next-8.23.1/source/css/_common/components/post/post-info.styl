/* 右侧详情区域 */
.track-detail {
  background: $article-track-info-bg;
  position: absolute;
  top: 1rem;
  right: 1%;
  width: 37%;
  height: 100%;       /* 整体撑满容器 */
  overflow: hidden;
  display: block;
  gap: 0;

  /* 左右渐变遮罩，左边 5%，右边 5% */
  -webkit-mask-image: 
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%;
  -webkit-mask-composite: destination-in;

  mask-image: 
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 95%, rgba(0,0,0,0) 100%);
  mask-repeat: no-repeat;
  mask-size: 100% 100%;
  mask-composite: intersect;

  /* 动画 */
  opacity: 1;
  transform: translateX(0);
  transition: opacity 0.3s ease, transform 0.3s ease;
}


.track-detail.fade-out {
  opacity: 0;
  transform: translateX(20px); /* 向右淡出 */
}

.track-detail.fade-in {
  opacity: 1;
  transform: translateX(0); /* 从右淡入 */
}

/* 封面图，占 30% 高度 */
.track-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 30%;        /* 3:7 */
  overflow: hidden;
}

.track-cover a,
.track-cover img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;

  pointer-events: none; /* 禁止点击 */
}

/* 内容卡片，占 70% 高度 */
.track-card {
  position: absolute;
  top: 30%;
  left: 0;
  width: 100%;
  height: 70%;
  padding: 1.2rem 2rem 2.5rem 2rem;
  box-sizing: border-box;

  display: flex;
  flex-direction: column; /* 垂直排列 */
}

.track-title {
  font-size: 1.2rem;
  font-weight: bold;
  text-decoration: none;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;   /* 一行标题 */
}

.track-meta {
  font-size: 0.8rem;
  line-height: 1rem;
  color: #888;
  margin: 0.5rem 0;
}

.track-description {
  font-size: 1rem;
  line-height: 1.5rem;
  overflow: hidden;  
  flex: 1 1 auto;       /* 填充剩余空间 */
  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 999;  /* 无限行（999行即可） */
  white-space: normal;
  word-break: break-word;
}

.track-readmore {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1%;
  margin: 0 10%;
  font-size: 1.5rem;
  font-weight: 500;
  background-color: $btn-default-bg;
  border: none;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
  transition: background-color 0.2s, transform 0.2s;

  width: 80%;
  height: 2rem;       /* 固定按钮高度 */
  margin-top: auto;   /* 推到底部 */
  text-align: center;
}

.track-readmore:hover {
  background-color: $btn-default-hover-bg;
  transform: translateY(-1px);
}


@media (max-width: 768px) {
  /* 轮盘主体 */
  .track-detail {
    width: 98%;
    height: 28rem;
    right: 1%;

    -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    -webkit-mask-composite: destination-in;

    mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
    mask-composite: intersect;
  }

  .track-cover {
    width: 96%;
    left: 2%;
    position: relative;

    /* 左右渐变遮罩 */
    -webkit-mask-image: 
      linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0));
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-image: 
      linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0));
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
  }
}