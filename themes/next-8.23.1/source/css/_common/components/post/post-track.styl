/* ==============================
   osu-container：整体容器
   ============================== */
.osu-container {
  height: 30rem; /* 可自行调整 */
  width: 100%;
  background: $article-track-container-bg;
  position: relative;
  overflow: hidden;
  display: block;
  padding: 0 1rem;
  transform: translateX(-1rem);

  /* ===== 上下 + 左右渐变遮罩 ===== */
  -webkit-mask-image: 
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100% 100%, 100% 100%;
  -webkit-mask-composite: destination-in;

  mask-image: 
    linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%),
    linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
  mask-repeat: no-repeat;
  mask-size: 100% 100%, 100% 100%;
  mask-composite: intersect;
}

/* ==============================
   osu-container 边框
   ============================== */
.osu-container::before {
  content: "";
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  border: 1rem solid rgba(255,255,255,0.8); /* 亮白色 */
  pointer-events: none; /* 不阻挡交互 */
  box-sizing: border-box;
}

/* ==============================
   osu-wheel：轮盘主体
   ============================== */
.osu-wheel {
  position: absolute;
  width: 70%;
  height: 100%;
  overflow: hidden;
}

/* ==============================
   track：每条音乐条目
   ============================== */
.track {
  position: absolute;
  transform-origin: left center; /* 左边缘中间 */
  transition: transform 0.2s, opacity 0.2s;
  width: 60%;
  height: 5rem;
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: flex-start; /* 左对齐 */
  overflow: hidden;
  background-color: $article-track-bg;

  will-change: transform, opacity;
  backface-visibility: hidden;

  /* 灰色遮罩 */
  &::after {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0, 0, 0, 0.25);
    transition: opacity 0.3s ease;
    pointer-events: none; /* 遮罩不挡交互 */
    z-index: 5;
  }

  /* active 状态 */
  &.active {
    z-index: 10;
    box-shadow: 
      0 0.5rem 1rem rgba(0,0,0,0.12),
      0 0 1.25rem 0.5rem $color-img-box-shadow-hover-custom;

    /* 去掉遮罩 */
    &::after {
      opacity: 0;
    }

    /* track 内 a 可点击 */
    a {
      pointer-events: auto;
    }
  }
}

/* ==============================
   track-content：条目内容容器
   ============================== */
.track-content {
  display: flex;
  flex-direction: column; /* 竖直排列内容 */
  justify-content: center; /* 垂直居中（主轴） */
  align-items: center;     /* 水平居中（交叉轴） */
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* ==============================
   track-image：条目图片
   ============================== */
.track-image {
  display: inline-block;
  width: 30%;
  height: 100%;
  position: relative;
  overflow: hidden;
  vertical-align: top;

  /* 左侧渐变遮罩 */
  -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 100%);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: cover;

  mask-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 100%);
  mask-repeat: no-repeat;
  mask-size: cover;

  a {
    display: block;
    width: 100%;
    height: 100%;
    pointer-events: none; /* 默认禁止点击 */
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    transition: transform 0.8s ease;
  }
}

/* ==============================
   track-title：标题
   ============================== */
.track-title {
  font-size: 1rem;
  line-height: 1.75rem;
  height: 1.75rem;
  margin: 0 !important;

  text-decoration: underline;
  text-decoration-thickness: 2px;
  text-underline-offset: 4px;

  a {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    pointer-events: none; /* 默认不可点击 */
  }
}

/* ==============================
   track-meta-container：条目 Meta 信息
   ============================== */
.track-content .track-meta-container {
  .post-meta {
    display: block;
    font-size: 0.8rem;
    margin: 0;
    margin-top: auto;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    span {
      display: inline;
    }
  }

  a {
    color: $link-color;
    opacity: 0.4;
    transition: color 0.3s ease;

    &:hover {
      opacity: 1;
      color: $link-hover-color;
    }
  }
}

/* ==============================
   响应式
   ============================== */
@media (max-width: 768px) {
  .osu-container {
    height: 50rem;
  }

  .osu-wheel {
    position: absolute;
    top: 30rem;
    width: 100%;
    height: 20rem;

    /* 顶部渐变遮罩 */
    -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    -webkit-mask-composite: destination-in;

    mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%);
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
    mask-composite: intersect;
  }

  .track {
    height: 4rem;
  }

  .track-title {
    font-size: 0.8rem !important;
    line-height: 1.25rem;
  }

  .track-content .track-meta-container .post-meta {
    font-size: 0.5rem;
  }
}
