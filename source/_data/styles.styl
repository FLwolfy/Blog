@import 'variables.styl'

// 站名加粗
.site-title {
  font-weight: bold;
}

// 全局字体
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+SC&display=swap')
html, body, * {
  font-family: 'Noto Sans SC', 'Noto Sans', 'Microsoft YaHei', sans-serif;
}

// 页面背景图片
body
  background: url(/images/core/bg.jpg) no-repeat center center fixed
  background-size: cover
  position: relative
  color: $color-body-text-custom
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif

// 图片遮罩
body::before
  content: ''
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $color-overlay-custom
  z-index: -5

// 去除头梁
.headband
  display: none !important

// 链接悬停放大抖动
a {
  display: inline-block;
  transition: transform 0.2s ease-in-out;
}
a:hover {
  transform: scale(1.05);  /* 放大 */
  animation: shake-it 0.5s reverse infinite cubic-bezier(0.68, -0.55, 0.27, 1.55);  /* 抖动 */
}
@keyframes shake-it {
  0% {
    text-shadow: 0 0 rgba(0, 255, 255, 0.5), 0 0 rgba(255, 0, 0, 0.5);
  }
  25% {
    text-shadow: -2px 0 rgba(0, 255, 255, 0.5), 2px 0 rgba(255, 0, 0, 0.5);
  }
  50% {
    text-shadow: -5px 0 rgba(0, 255, 255, 0.5), 3px 0 rgba(255, 0, 0, 0.5);
  }
  100% {
    text-shadow: 3px 0 rgba(0, 255, 255, 0.5), 5px 0 rgba(255, 0, 0, 0.5);
  }
}

// 半透明圆角效果
.main-inner
  opacity: 0;                               // 让动画加载前隐藏
  backdrop-filter: blur(6px)                // 模糊毛玻璃效果
  -webkit-backdrop-filter: blur(6px)        // Safari 支持
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25)
  border-radius: 0 0 12px 12px

.header
  background: transparent !important

.site-brand-container
  position: relative
  backdrop-filter: blur(6px)
  -webkit-backdrop-filter: blur(6px)
  overflow: hidden
  color: white
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5)

  &::before
    content: ''
    position: absolute
    top: 50%
    left: -20%
    width: 140%
    height: 80%
    transform: translateY(-50%) rotate(-2deg)
    background: radial-gradient(circle at 30% 50%, rgba(255, 0, 0, 0.4) 0%, transparent 70%),
                radial-gradient(circle at 70% 50%, rgba(255, 0, 0, 0.35) 0%, transparent 60%),
                radial-gradient(circle at 50% 60%, rgba(255, 100, 100, 0.3) 0%, transparent 50%)
    filter: blur(12px)
    opacity: 0.8
    mix-blend-mode: screen
    z-index: 0

.main-menu
  background: $color-sidebar-custom
  backdrop-filter: blur(6px)
  -webkit-backdrop-filter: blur(6px)
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25)
  border-radius: 0 0 12px 12px

.sidebar-inner
  background: $color-sidebar-custom
  backdrop-filter: blur(6px)
  -webkit-backdrop-filter: blur(6px)
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25)
  border-radius: 12px

.search-result-container
  backdrop-filter: blur(6px)
  -webkit-backdrop-filter: blur(6px)
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25)
  border-radius: 12px

.back-to-top-on
  backdrop-filter: blur(6px)
  -webkit-backdrop-filter: blur(6px)
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25)
  border-radius: 0 0 12px 12px

// 文章样式
.post-body {
  // 标题样式
  h1 {
    color: $color-markdown-title-text-custom;
    display: flex;
    align-items: center;
    font-weight: bold;
    white-space: nowrap;
    position: relative;
  }
  h1::before,
  h1::after {
    content: "";
    flex-grow: 1;
    height: 12px;
    background: repeating-linear-gradient(
      -45deg,
      $color-markdown-title-decoration-custom,
      $color-markdown-title-decoration-custom 8px,
      transparent 8px,
      transparent 16px
    );
    background-size: 100% 100%;
  }
  h1::before {
    margin-right: 16px;
  }
  h1::after {
    margin-left: 16px;
  }

  h2 {
    color: $color-markdown-title-text-custom;
    display: flex;
    align-items: center;
    font-weight: bold;
    white-space: nowrap;
    position: relative;
  }
  h2::before,
  h2::after {
    content: "";
    flex-grow: 1;
    border-top: 2px solid $color-markdown-title-decoration-custom;
  }
  h2::before {
    margin-right: 16px;
  }
  h2::after {
    margin-left: 16px;
  }

  h3::before {
    content: "❮";
    margin-right: 5px;
    border-bottom: 1px solid $color-markdown-title-decoration-custom;
  }

  h1, h2, h3, h4, h5, h6 {
    .header-anchor, .headerlink {
      display: none;
    }
  }

  // 引言样式
  blockquote {
    background-color: $color-blockquote-custom;
    border-left: 3.2px solid $color-blockquote-bar-custom;
    padding: 16px 20px;
  }

  blockquote * {
    font-size: 90%;
    color: $color-blockquote-text-custom;
  }
}